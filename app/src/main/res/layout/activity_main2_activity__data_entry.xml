<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mycompany.snap.Main2Activity_DataEntry">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_date"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:hint="Name of the Institution"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="61dp"
        android:layout_marginStart="61dp"
        android:layout_marginTop="29dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_product"
        android:inputType="number"
        android:hint="Year of Pass out"
        android:layout_below="@+id/editText_date"
        android:layout_alignLeft="@+id/editText_date"
        android:layout_alignStart="@+id/editText_date"
        android:layout_marginTop="29dp"
        android:layout_alignRight="@+id/editText_date"
        android:layout_alignEnd="@+id/editText_date" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_email"
        android:hint="Section"
        android:layout_below="@+id/editText_product"
        android:layout_alignLeft="@+id/editText_date"
        android:layout_alignStart="@+id/editText_date"
        android:layout_marginTop="29dp"
        android:layout_alignRight="@+id/editText_product"
        android:layout_alignEnd="@+id/editText_product" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_strength"
        android:hint="Class Strength"
        android:inputType="number"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/editText_email"
        android:layout_alignLeft="@+id/editText_email"
        android:layout_alignStart="@+id/editText_email"
        android:layout_alignRight="@+id/editText_email"
        android:layout_alignEnd="@+id/editText_email" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/button_next"
        android:layout_alignTop="@+id/button_back"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/button_back"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



</RelativeLayout>
