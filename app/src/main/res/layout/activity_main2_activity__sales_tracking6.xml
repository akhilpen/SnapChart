<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mycompany.snap.Main2Activity_SalesTracking6">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/editText_date"
        android:layout_alignParentTop="true"
        android:hint="Next appointment date"
        android:focusableInTouchMode="false"
        android:layout_marginTop="29dp"
        android:layout_toRightOf="@+id/button_back"
        android:layout_toEndOf="@+id/button_back"
        android:layout_toLeftOf="@+id/button_next"
        android:layout_toStartOf="@+id/button_next" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="false"

        android:id="@+id/editText_product"
        android:hint="Product"

        android:layout_marginTop="30dp"
        android:layout_below="@+id/editText_date"


        android:layout_toRightOf="@+id/button_back"
        android:layout_alignRight="@+id/editText_date"
        android:layout_alignEnd="@+id/editText_date" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_email"
        android:hint="Cost"
        android:inputType="numberDecimal"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/editText_product"
        android:layout_alignLeft="@+id/editText_product"
        android:layout_alignStart="@+id/editText_product"
        android:layout_alignRight="@+id/editText_date"
        android:layout_alignEnd="@+id/editText_date" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="next"
        android:id="@+id/button_next"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_marginTop="30dp"
        android:id="@+id/button_back"
        android:layout_alignBottom="@+id/button_next"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_mobile"
        android:hint="Remarks"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/editText_email"
        android:layout_alignLeft="@+id/editText_email"
        android:layout_alignStart="@+id/editText_email"
        android:layout_alignRight="@+id/editText_date"
        android:layout_alignEnd="@+id/editText_date" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/textView_sno"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



</RelativeLayout>
