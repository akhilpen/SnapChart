<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Snap Chart"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data Entry"
        android:id="@+id/button_visiting"
        android:layout_below="@+id/textView"
        android:layout_marginTop="78dp"
        android:layout_alignLeft="@+id/button_sales"
        android:layout_alignStart="@+id/button_sales"
        android:layout_alignRight="@+id/button_sales"
        android:layout_alignEnd="@+id/button_sales" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sales Tracking"
        android:id="@+id/button_sales"
        android:layout_below="@+id/button_visiting"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="upload DB"
        android:id="@+id/button_upload"
        android:layout_below="@+id/button_show"
        android:layout_marginTop="32dp"
        android:layout_alignRight="@+id/button_sales"
        android:layout_alignEnd="@+id/button_sales"
        android:layout_alignLeft="@+id/button_sales"
        android:layout_alignStart="@+id/button_sales" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DB count"
        android:id="@+id/button_show"
        android:layout_below="@+id/button_sales"
        android:layout_marginTop="32dp"
        android:layout_alignRight="@+id/button_sales"
        android:layout_alignEnd="@+id/button_sales"
        android:layout_alignLeft="@+id/button_sales"
        android:layout_alignStart="@+id/button_sales" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton"
    android:background="@drawable/logout"
      android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
         />

</RelativeLayout>
